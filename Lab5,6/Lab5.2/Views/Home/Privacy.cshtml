@{
    ViewData["Title"] = "Privacy Policy";
}

<h1>@ViewData["Title"]</h1>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Data Usage Policy</h5>
        <p class="card-text">
            This application uses Azure Cognitive Services for text analysis. The text you submit is sent to Microsoft's servers for processing.
            We do not store your submitted text permanently, but it may be temporarily cached for performance reasons.
        </p>
        <p class="card-text">
            For more information about Microsoft's privacy policy, please visit
            <a href="https://privacy.microsoft.com" target="_blank">Microsoft Privacy Statement</a>.
        </p>
    </div>
</div>